<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('🚀 Initializing Blogs Page...');
    
    // Category filtering
    const categoryBtns = document.querySelectorAll('.category-btn');
    const blogCards = document.querySelectorAll('.blog-card');
    const searchInput = document.getElementById('blogSearch');
    
    // Category filter functionality
    categoryBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // Update active button
        categoryBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        const category = btn.dataset.category;
        console.log('📂 Filtering by category:', category);
        
        // Filter blog cards
        blogCards.forEach(card => {
          if (category === 'all' || card.dataset.category === category) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    });
    
    // Search functionality
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const searchTerm = e.target.value.toLowerCase();
        console.log('🔍 Searching for:', searchTerm);
        
        blogCards.forEach(card => {
          const title = card.querySelector('.card-title').textContent.toLowerCase();
          const excerpt = card.querySelector('.card-excerpt').textContent.toLowerCase();
          const category = card.querySelector('.category-tag').textContent.toLowerCase();
          
          if (title.includes(searchTerm) || excerpt.includes(searchTerm) || category.includes(searchTerm)) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    }
    
    // Load more functionality (placeholder)
    const loadMoreBtn = document.getElementById('loadMoreBtn');
    if (loadMoreBtn) {
      loadMoreBtn.addEventListener('click', () => {
        console.log('📚 Loading more articles...');
        // Placeholder for loading more articles
        alert('More articles coming soon!');
      });
    }
    
    // Newsletter form
    const newsletterForm = document.getElementById('newsletterForm');
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const email = e.target.querySelector('input[type="email"]').value;
        console.log('📧 Newsletter subscription:', email);
        alert('Thank you for subscribing! We\'ll be in touch soon.');
        e.target.reset();
      });
    }
    
    // Enhanced page transitions for blog links
    const blogLinks = document.querySelectorAll('.read-more-btn, .card-link');
    blogLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        
        const targetUrl = link.getAttribute('href');
        console.log('🔗 Navigating to blog post:', targetUrl);
        
        // Create page transition overlay
        const transitionOverlay = document.createElement('div');
        transitionOverlay.className = 'page-transition';
        document.body.appendChild(transitionOverlay);
        
        // Add loading animation
        transitionOverlay.innerHTML = '<div class="loading-spinner"></div>';
        
        // Trigger transition
        setTimeout(() => {
          transitionOverlay.classList.add('active');
        }, 10);
        
        // Navigate after transition
        setTimeout(() => {
          window.location.href = targetUrl;
        }, 300);
      });
    });
    
    console.log('✅ Blogs Page initialized with smooth transitions');
  });
</script> 