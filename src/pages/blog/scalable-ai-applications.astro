  }

  .content-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .blog-article {
    margin-bottom: 80px;
  }

  .content {
    font-family: 'Inter', sans-serif;
    line-height: 1.7;
    color: #333;
    opacity: 0;
    animation: fadeInUp 0.6s ease 0.5s forwards;
  }

  .content h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2rem;
    font-weight: 600;
    color: #000;
