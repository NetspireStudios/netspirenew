---
// Cinematic Hero Section - Animated Star Background
---

<section class="hero" id="hero">
  <!-- Animated Star Background -->
  <div class="hero-background">
    <div class="stars-container">
      <div class="stars stars-small"></div>
      <div class="stars stars-medium"></div>
      <div class="stars stars-large"></div>
    </div>
    <div class="gradient-overlay"></div>
  </div>
  
  <!-- Content Overlay -->
  <div class="hero-overlay"></div>
  
  <!-- Glow Effects -->
  <div class="hero-glow glow-1"></div>
  <div class="hero-glow glow-2"></div>
  
  <!-- Hero Content -->
  <div class="hero-content">
    <h1 class="hero-title">
      <div class="title-line">
        <span class="title-word">Netspire</span>
      </div>
    </h1>
    
    <div class="hero-description">
      <p>Cinematic digital experiences that push creative boundaries</p>
    </div>
    
    <div class="hero-cta">
      <button class="cta-button" data-cursor="hover">
        <span>Explore Our Work</span>
        <div class="cta-arrow">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M1 8H15M15 8L8 1M15 8L8 15" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </button>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator" data-cursor="hover">
    <div class="scroll-text">
      <span>Scroll to discover</span>
    </div>
    <div class="scroll-line">
      <div class="scroll-dot"></div>
    </div>
  </div>
  
  <!-- Floating Elements -->
  <div class="floating-elements">
    <div class="floating-dot floating-dot-1"></div>
    <div class="floating-dot floating-dot-2"></div>
    <div class="floating-dot floating-dot-3"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000;
  }

  /* Animated Star Background */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
    overflow: hidden;
  }

  .stars-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.9) 0%,
      rgba(20, 20, 40, 0.8) 25%,
      rgba(40, 20, 60, 0.7) 50%,
      rgba(20, 20, 40, 0.8) 75%,
      rgba(0, 0, 0, 0.9) 100%
    );
    z-index: 11;
  }

  /* Stars Animation */
  .stars {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(2px 2px at 20px 30px, #fff, transparent),
      radial-gradient(2px 2px at 40px 70px, #fff, transparent),
      radial-gradient(1px 1px at 90px 40px, #fff, transparent),
      radial-gradient(1px 1px at 130px 80px, #fff, transparent),
      radial-gradient(2px 2px at 160px 30px, #fff, transparent);
    background-repeat: repeat;
    background-size: 200px 100px;
    animation: twinkle linear infinite;
  }

  .stars-small {
    background-size: 200px 100px;
    animation-duration: 200s;
    opacity: 0.3;
  }

  .stars-medium {
    background-size: 400px 200px;
    animation-duration: 300s;
    opacity: 0.5;
    animation-delay: -100s;
  }

  .stars-large {
    background-size: 600px 300px;
    animation-duration: 500s;
    opacity: 0.2;
    animation-delay: -200s;
  }

  @keyframes twinkle {
    0% { transform: translateX(0); }
    100% { transform: translateX(-200px); }
  }

  /* Content Overlay */
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 30% 30%, rgba(0,0,0,0.3) 0%, transparent 60%),
      radial-gradient(circle at 70% 70%, rgba(0,0,0,0.4) 0%, transparent 60%),
      linear-gradient(135deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.3) 100%);
    z-index: 18;
    pointer-events: none;
  }

  /* Glow Effects */
  .hero-glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
    z-index: 19;
    animation: float 8s ease-in-out infinite;
    pointer-events: none;
  }

  .glow-1 {
    top: 20%;
    left: 20%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(192, 192, 192, 0.08) 0%, transparent 70%);
    animation-delay: 0s;
  }

  .glow-2 {
    bottom: 20%;
    right: 20%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(192, 192, 192, 0.06) 0%, transparent 70%);
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) scale(1);
      opacity: 0.8;
    }
    50% {
      transform: translateY(-20px) scale(1.05);
      opacity: 1;
    }
  }

  /* Hero Content */
  .hero-content {
    position: relative;
    z-index: 20;
    text-align: center;
    max-width: 1000px;
    padding: 0 40px;
    pointer-events: auto;
  }

  .hero-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(4rem, 10vw, 8rem);
    font-weight: 500;
    line-height: 0.9;
    color: #fff;
    margin-bottom: 30px;
    letter-spacing: -0.02em;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
  }

  .title-line {
    overflow: hidden;
    display: block;
  }

  .title-word {
    display: inline-block;
    opacity: 1;
    transform: translateY(0);
    transition: all 0.8s ease;
    background: linear-gradient(135deg, #fff 0%, #c0c0c0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    margin-bottom: 50px;
    opacity: 1;
    transform: translateY(0);
    transition: all 0.8s ease;
  }

  .hero-description p {
    font-family: 'Inter', sans-serif;
    font-size: 20px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  /* CTA Button */
  .hero-cta {
    margin-bottom: 80px;
    opacity: 1;
    transform: translateY(0);
    transition: all 0.8s ease;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 16px;
    padding: 20px 40px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50px;
    color: #fff;
    text-decoration: none;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.4s ease;
    backdrop-filter: blur(20px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .cta-button:hover {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
  }

  .cta-arrow {
    transition: transform 0.3s ease;
  }

  .cta-button:hover .cta-arrow {
    transform: translateX(4px);
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    z-index: 20;
    opacity: 1;
    animation: fadeIn 1s ease 2s both;
  }

  .scroll-text {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .scroll-line {
    position: relative;
    width: 1px;
    height: 80px;
    background: rgba(255, 255, 255, 0.2);
    overflow: hidden;
  }

  .scroll-dot {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 3px;
    height: 20px;
    background: linear-gradient(to bottom, #fff, transparent);
    border-radius: 2px;
    animation: scrollDot 2s ease-in-out infinite;
  }

  @keyframes scrollDot {
    0% {
      transform: translateX(-50%) translateY(-20px);
      opacity: 0;
    }
    20% {
      opacity: 1;
    }
    100% {
      transform: translateX(-50%) translateY(100px);
      opacity: 0;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateX(-50%) translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
  }

  /* Floating Elements */
  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 15;
    pointer-events: none;
  }

  .floating-dot {
    position: absolute;
    width: 6px;
    height: 6px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    animation: floatDot 6s ease-in-out infinite;
  }

  .floating-dot-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .floating-dot-2 {
    top: 60%;
    right: 15%;
    animation-delay: 2s;
  }

  .floating-dot-3 {
    bottom: 30%;
    left: 20%;
    animation-delay: 4s;
  }

  @keyframes floatDot {
    0%, 100% {
      transform: translateY(0px);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-15px);
      opacity: 0.8;
    }
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-content {
      padding: 0 30px;
    }

    .hero-title {
      font-size: clamp(3rem, 8vw, 6rem);
      margin-bottom: 25px;
    }

    .hero-description p {
      font-size: 18px;
    }

    .hero-cta {
      margin-bottom: 60px;
    }

    .cta-button {
      padding: 18px 36px;
      font-size: 15px;
    }
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 0 20px;
    }

    .hero-title {
      font-size: clamp(2.5rem, 8vw, 4rem);
      margin-bottom: 20px;
    }

    .hero-description p {
      font-size: 16px;
      max-width: 400px;
    }

    .hero-cta {
      margin-bottom: 50px;
    }

    .cta-button {
      padding: 16px 32px;
      font-size: 14px;
      gap: 12px;
    }

    .scroll-indicator {
      bottom: 30px;
    }

    .scroll-line {
      height: 60px;
    }

    /* Mobile stars optimization */
    .stars-small {
      animation-duration: 150s;
    }

    .stars-medium {
      animation-duration: 220s;
    }

    .stars-large {
      animation-duration: 350s;
    }
  }

  @media (max-width: 480px) {
    .hero-content {
      padding: 0 15px;
    }

    .hero-title {
      font-size: clamp(2rem, 8vw, 3rem);
      margin-bottom: 15px;
    }

    .hero-description p {
      font-size: 14px;
      max-width: 300px;
    }

    .cta-button {
      padding: 14px 28px;
      font-size: 13px;
      gap: 10px;
    }

    .floating-dot {
      width: 4px;
      height: 4px;
    }
  }
</style>

<script>
  // Hero animations and star background management
  function initHeroAnimations() {
    console.log('✨ Initializing hero animations with star background...');
    
    // Enhanced star animation performance
    function optimizeStarAnimations() {
      const stars = document.querySelectorAll('.stars');
      const isReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      
      if (isReducedMotion) {
        stars.forEach(star => {
          star.style.animationDuration = '0s';
        });
        console.log('🌟 Reduced motion detected - stars animation disabled');
        return;
      }
      
      // Pause animations when tab is not visible
      document.addEventListener('visibilitychange', () => {
        stars.forEach(star => {
          star.style.animationPlayState = document.hidden ? 'paused' : 'running';
        });
      });
      
      console.log('🌟 Star animations optimized');
    }

    // Hero content animations
    function initContentAnimations() {
      const elements = [
        { selector: '.title-word', delay: 300 },
        { selector: '.hero-description', delay: 600 },
        { selector: '.hero-cta', delay: 900 },
        { selector: '.scroll-indicator', delay: 1200 }
      ];

      elements.forEach(({ selector, delay }) => {
        setTimeout(() => {
          const element = document.querySelector(selector) as HTMLElement;
          if (element) {
            element.style.opacity = '1';
            element.style.transform = element.classList.contains('title-word') 
              ? 'translateY(0)' 
              : 'translateY(0)';
          }
        }, delay);
      });
    }

    // CTA button functionality
    function initCTAButton() {
      const ctaButton = document.querySelector('.cta-button') as HTMLButtonElement;
      if (ctaButton) {
        ctaButton.addEventListener('click', () => {
          const portfolioSection = document.getElementById('work');
          if (portfolioSection) {
            portfolioSection.scrollIntoView({ 
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      }
    }

    // Scroll indicator functionality
    function initScrollIndicator() {
      const scrollIndicator = document.querySelector('.scroll-indicator') as HTMLElement;
      if (scrollIndicator) {
        scrollIndicator.addEventListener('click', () => {
          window.scrollTo({
            top: window.innerHeight,
            behavior: 'smooth'
          });
        });
      }
    }

    // Initialize all functions
    optimizeStarAnimations();
    initContentAnimations();
    initCTAButton();
    initScrollIndicator();

    console.log('✅ Hero section with star background initialized successfully');
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initHeroAnimations);
  } else {
    initHeroAnimations();
  }
</script>
