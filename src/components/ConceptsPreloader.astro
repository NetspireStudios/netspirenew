---
// Simple, Fast Preloader for Concepts Page
---

<div class="concepts-preloader" id="conceptsPreloader">
  <div class="preloader-content">
    <div class="preloader-logo">CONCEPTS</div>
    <div class="preloader-line">
      <div class="preloader-progress"></div>
    </div>
  </div>
</div>

<style>
  .concepts-preloader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000000;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    transition: opacity 0.5s ease, visibility 0.5s ease;
  }

  .concepts-preloader.hidden {
    opacity: 0;
    visibility: hidden;
  }

  .preloader-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
  }

  .preloader-logo {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: #ffffff;
    letter-spacing: 4px;
    opacity: 0;
    animation: logoFadeIn 0.8s ease forwards;
  }

  .preloader-line {
    width: 200px;
    height: 2px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 1px;
    overflow: hidden;
    opacity: 0;
    animation: lineFadeIn 0.8s ease 0.3s forwards;
  }

  .preloader-progress {
    width: 0%;
    height: 100%;
    background: linear-gradient(90deg, #ffffff 0%, #cccccc 100%);
    border-radius: 1px;
    animation: progressFill 1.2s ease 0.5s forwards;
  }

  @keyframes logoFadeIn {
    to {
      opacity: 1;
    }
  }

  @keyframes lineFadeIn {
    to {
      opacity: 1;
    }
  }

  @keyframes progressFill {
    to {
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .preloader-logo {
      font-size: 2rem;
      letter-spacing: 2px;
    }

    .preloader-line {
      width: 150px;
    }
  }
</style>

<script>
  function initConceptsPreloader() {
    console.log('⚡ Initializing fast concepts preloader...');
    
    const preloader = document.getElementById('conceptsPreloader');
    if (!preloader) return;

    // Simple, fast preloader - hide after 1.8 seconds
    setTimeout(() => {
      preloader.classList.add('hidden');
      console.log('✅ Concepts preloader complete');
      
      // Remove from DOM after transition
      setTimeout(() => {
        if (preloader.parentNode) {
          preloader.parentNode.removeChild(preloader);
        }
      }, 500);
    }, 1800);
  }

  // Initialize immediately
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initConceptsPreloader);
  } else {
    initConceptsPreloader();
  }
</script> 