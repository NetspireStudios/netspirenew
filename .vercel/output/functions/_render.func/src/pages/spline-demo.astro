---
import Layout from '../layouts/Layout.astro';
import SplineScene from '../components/SplineScene.astro';
---

<Layout title="Spline Demo - Netspire">
  <main>
    <section class="spline-hero">
      <div class="hero-content">
        <h1>Spline 3D Integration</h1>
        <p>High-performance 3D scenes with seamless Astro integration</p>
      </div>
      
      <!-- Your Spline Scene -->
      <SplineScene 
        sceneUrl="https://prod.spline.design/h9CGtSTtyMc58yFj/scene.splinecode"
        height="100vh"
        className="hero-spline"
      />
    </section>

    <section class="content-section">
      <div class="container">
        <h2>Features</h2>
        <div class="features-grid">
          <div class="feature">
            <h3>High Performance</h3>
            <p>Direct canvas rendering with no React overhead</p>
          </div>
          <div class="feature">
            <h3>Seamless Integration</h3>
            <p>No iframe borders, perfect styling control</p>
          </div>
          <div class="feature">
            <h3>Loading States</h3>
            <p>Beautiful loading animation with error handling</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Smaller Spline Scene Example -->
    <section class="smaller-demo">
      <div class="container">
        <h2>Smaller Scene Example</h2>
        <SplineScene 
          sceneUrl="https://prod.spline.design/h9CGtSTtyMc58yFj/scene.splinecode"
          height="400px"
          className="small-spline"
        />
      </div>
    </section>
  </main>
</Layout>

<style>
  .spline-hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-content {
    position: absolute;
    z-index: 20;
    text-align: center;
    color: #fff;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
  }

  .hero-content h1 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(3rem, 6vw, 6rem);
    font-weight: 500;
    margin: 0 0 20px 0;
    letter-spacing: -0.02em;
  }

  .hero-content p {
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    opacity: 0.9;
    margin: 0;
  }

  .content-section {
    padding: 120px 0;
    background: #fff;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .container h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 3rem;
    font-weight: 500;
    text-align: center;
    margin-bottom: 60px;
    color: #000;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
  }

  .feature {
    text-align: center;
    padding: 40px 20px;
    border-radius: 16px;
    background: #f8f9fa;
  }

  .feature h3 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 16px;
    color: #000;
  }

  .feature p {
    font-family: 'Inter', sans-serif;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  .smaller-demo {
    padding: 120px 0;
    background: #f8f9fa;
  }

  .smaller-demo h2 {
    text-align: center;
    margin-bottom: 60px;
  }

  /* Custom styling for different Spline instances */
  .hero-spline {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .small-spline {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 20px;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .content-section,
    .smaller-demo {
      padding: 80px 0;
    }
  }
</style> 