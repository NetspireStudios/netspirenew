      const currentProject = projects[currentIndex];
      const conceptImage = document.getElementById('conceptImage');
      
      if (lightboxImage && conceptImage) {
        lightboxImage.src = conceptImage.src;
        lightboxImage.alt = conceptImage.alt;
      }
      
      if (lightboxTitle) lightboxTitle.textContent = currentProject.title;
      if (lightboxCategory) lightboxCategory.textContent = currentProject.category;
      
      // Save current scroll position
      const scrollY = window.scrollY;
      
      // Prevent background scrolling with enhanced method
      document.body.classList.add('lightbox-open');
      document.body.style.top = `-${scrollY}px`;
      
      lightbox.classList.add('active');
    }
    
    function closeLightbox() {
      const scrollY = document.body.style.top;
      
      // Restore scrolling and position
      document.body.classList.remove('lightbox-open');
      document.body.style.top = '';
      
      if (scrollY) {
        window.scrollTo(0, parseInt(scrollY || '0') * -1);
      }
      
      lightbox.classList.remove('active');
    }
    
