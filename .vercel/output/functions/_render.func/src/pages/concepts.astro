---
import Layout from '../layouts/Layout.astro';
import ConceptsPreloader from '../components/ConceptsPreloader.astro';
---

<Layout title="Concepts - Netspire">
  <!-- Fast Concepts Preloader -->
  <ConceptsPreloader />

  <!-- Page Transition Overlay -->
  <div class="page-transition-overlay" id="pageTransition">
    <div class="transition-background"></div>
  </div>

  <!-- Essential CSS for Mobile Compatibility -->
  <style>
    /* Reset and Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Page Transition System */
    .page-transition-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 9999;
      pointer-events: none;
      overflow: hidden;
    }

    .transition-background {
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: #000000;
      transition: none;
    }

    .transition-background.slide-in {
      left: 0;
      transition: left 0.6s ease-in-out;
    }

    .transition-background.slide-out {
      left: 100%;
      transition: left 0.6s ease-in-out;
    }

    /* Hero Section */
    .concepts-hero {
      min-height: 100vh;
      background: linear-gradient(135deg, #000 0%, #1a1a1a 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      position: relative;
      overflow: hidden;
    }

    .hero-container {
      max-width: 1200px;
      width: 100%;
      padding: 0 60px;
      text-align: center;
      z-index: 2;
    }

    .hero-badge {
      display: inline-flex;
      align-items: center;
      padding: 12px 24px;
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 30px;
      margin-bottom: 40px;
      backdrop-filter: blur(10px);
      opacity: 1;
      transform: translateY(0);
    }

    .hero-badge span {
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      font-weight: 500;
      letter-spacing: 1px;
      text-transform: uppercase;
    }

    .hero-title {
      font-family: 'Space Grotesk', sans-serif;
      font-size: clamp(3rem, 8vw, 7rem);
      font-weight: 700;
      line-height: 1.1;
      margin-bottom: 40px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
    }

    .title-word {
      opacity: 1;
      transform: translateY(0);
    }

    .hero-description {
      max-width: 600px;
      margin: 0 auto;
      opacity: 1;
      transform: translateY(0);
    }

    .hero-description p {
      font-family: 'Inter', sans-serif;
      font-size: 18px;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.8);
    }

    @media (max-width: 768px) {
      .hero-container {
        padding: 0 20px;
      }
      
      .hero-title {
        font-size: clamp(2rem, 8vw, 4rem);
        gap: 10px;
      }
      
      .hero-description p {
        font-size: 16px;
      }
    }

    /* PROJECT SHOWCASE ESSENTIAL STYLES */
    
    /* Animated Gradient Background */
    .animated-gradient {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(-45deg, #000000, #1a1a1a, #2d2d2d, #1a1a1a);
      background-size: 400% 400%;
      animation: gradientShift 8s ease infinite;
      z-index: 1;
    }

    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    /* Project Showcase Section */
    .projects-showcase-section {
      position: relative;
      overflow: hidden;
      min-height: 100vh;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 120px 0 80px 0;
    }

    /* Cinematic Title */
    .cinematic-title-container {
      position: relative;
      text-align: center;
      margin-bottom: 120px;
      width: 100%;
      max-width: 1400px;
    }

    .title-background-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-family: 'Space Grotesk', sans-serif;
      font-size: clamp(12rem, 20vw, 28rem);
      font-weight: 900;
      color: rgba(255, 255, 255, 0.02);
      line-height: 0.8;
      letter-spacing: -0.05em;
      z-index: 1;
      pointer-events: none;
      opacity: 1;
    }

    .main-title-wrapper {
      position: relative;
      z-index: 2;
      margin-bottom: 40px;
    }

    .title-line {
      overflow: hidden;
      margin-bottom: 20px;
    }

    /* Cinematic Title Words Styling */
    .main-title-wrapper .title-word {
      font-family: 'Space Grotesk', sans-serif;
      font-size: clamp(3rem, 8vw, 8rem);
      font-weight: 900;
      color: white;
      line-height: 0.9;
      letter-spacing: -0.02em;
      text-transform: uppercase;
      display: inline-block;
    }

    .highlight-word {
      background: linear-gradient(135deg, #ffffff 0%, #cccccc 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      position: relative;
    }

    .highlight-word::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 0;
      width: 100%;
      height: 6px;
      background: linear-gradient(135deg, #ffffff 0%, #cccccc 100%);
      border-radius: 3px;
    }

    .cinematic-subtitle {
      font-family: 'Inter', sans-serif;
      font-size: 18px;
      font-weight: 400;
      color: rgba(255, 255, 255, 0.7);
      letter-spacing: 2px;
      text-transform: uppercase;
      margin: 0;
    }

    .projects-container {
      position: relative;
      width: 100%;
      max-width: 1600px;
      z-index: 2;
      padding: 0 40px;
    }

    .projects-navigation {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 120px;
      margin-top: 60px;
      opacity: 1;
      transform: translateY(0);
      position: relative;
      z-index: 50;
    }

    .nav-arrow {
      position: relative;
      display: inline-flex;
      align-items: center;
      gap: 15px;
      padding: 20px 40px;
      background: transparent;
      border: 2px solid rgba(255, 255, 255, 0.2);
      border-radius: 60px;
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      color: white;
      cursor: pointer;
      transition: all 0.4s ease;
      backdrop-filter: blur(20px);
      overflow: hidden;
      z-index: 100;
      pointer-events: auto !important;
      user-select: none;
      -webkit-user-select: none;
      -webkit-tap-highlight-color: transparent;
    }

    .arrow-bg {
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #ffffff 0%, #cccccc 100%);
      transition: left 0.4s ease;
      z-index: -1;
    }

    .nav-arrow:hover .arrow-bg {
      left: 0;
    }

    .nav-arrow:hover {
      border-color: #ffffff;
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
      color: #000000;
    }

    .project-counter {
      display: flex;
      align-items: center;
      gap: 20px;
      font-family: 'Space Grotesk', sans-serif;
      font-size: 2rem;
      font-weight: 700;
      color: white;
    }

    .counter-divider {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .divider-line {
      width: 30px;
      height: 2px;
      background: rgba(255, 255, 255, 0.3);
    }

    .divider-dot {
      width: 6px;
      height: 6px;
      background: #ffffff;
      border-radius: 50%;
    }

    .project-display {
      display: grid;
      grid-template-columns: 1.6fr 1fr;
      gap: 100px;
      align-items: center;
      background: rgba(255, 255, 255, 0.03);
      backdrop-filter: blur(30px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 32px;
      padding: 100px;
      color: white;
      position: relative;
      overflow: hidden;
      opacity: 1;
      transform: translateY(0);
      transition: transform 0.3s ease-out, opacity 0.3s ease-out;
      min-height: 700px;
    }

    .project-display::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle at center, rgba(255, 255, 255, 0.02) 0%, transparent 70%);
      pointer-events: none;
    }

    .project-visual {
      position: relative;
      height: 650px;
      border-radius: 24px;
      overflow: hidden;
      box-shadow: 0 25px 60px rgba(0, 0, 0, 0.2);
    }

    .visual-background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.02) 100%);
      z-index: 1;
    }

    .project-image {
      position: relative;
      width: 100%;
      height: 100%;
      z-index: 2;
    }

    #conceptImage {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 24px;
    }

    .image-placeholder {
      position: relative;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 100%);
      color: white;
    }

    .placeholder-text {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 3rem;
      font-weight: 900;
      letter-spacing: 4px;
      text-align: center;
      z-index: 2;
      position: relative;
    }

    .placeholder-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(255, 255, 255, 0.05);
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .project-details {
      display: flex;
      flex-direction: column;
      gap: 25px;
    }

    .project-header {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .project-number {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 1.2rem;
      font-weight: 700;
      color: #ffffff;
      letter-spacing: 2px;
      opacity: 1;
      transform: translateX(0);
    }

    .project-category {
      font-family: 'Inter', sans-serif;
      font-size: 12px;
      font-weight: 600;
      color: rgba(255, 255, 255, 0.6);
      text-transform: uppercase;
      letter-spacing: 1px;
      padding: 8px 16px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      opacity: 1;
      transform: translateX(0);
    }

    .project-title {
      font-family: 'Space Grotesk', sans-serif;
      font-size: clamp(2.5rem, 4vw, 3.5rem);
      font-weight: 700;
      color: white;
      line-height: 1.1;
      margin: 0;
      opacity: 1;
      transform: translateY(0);
    }

    .project-description {
      font-family: 'Inter', sans-serif;
      font-size: 18px;
      line-height: 1.7;
      color: rgba(255, 255, 255, 0.8);
      margin: 0;
      opacity: 1;
      transform: translateY(0);
    }

    .project-tech {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      opacity: 1;
      transform: translateY(0);
    }

    .tech-tag {
      font-family: 'Inter', sans-serif;
      font-size: 12px;
      font-weight: 600;
      padding: 12px 20px;
      background: rgba(255, 255, 255, 0.08);
      color: rgba(255, 255, 255, 0.9);
      border-radius: 25px;
      letter-spacing: 0.5px;
      text-transform: uppercase;
      border: 1px solid rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
    }

    .project-actions {
      margin-top: 20px;
      opacity: 1;
      transform: translateY(0);
    }

    .view-project-btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 18px 36px;
      background: linear-gradient(135deg, #ffffff 0%, #cccccc 100%);
      border: none;
      border-radius: 50px;
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      font-weight: 600;
      letter-spacing: 0.5px;
      text-transform: uppercase;
      color: #000000;
      cursor: pointer;
      transition: all 0.4s ease;
      box-shadow: 0 8px 25px rgba(255, 255, 255, 0.1);
      position: relative;
      overflow: hidden;
    }

    /* TABLET RESPONSIVE STYLES */
    @media (max-width: 1024px) {
      .projects-container {
        max-width: 1200px;
        padding: 0 30px;
      }

      .project-display {
        padding: 60px;
        gap: 60px;
        min-height: 600px;
      }

      .project-visual {
        height: 450px;
      }

      .projects-navigation {
        gap: 80px;
        margin-top: 40px;
      }
    }

    /* MOBILE RESPONSIVE STYLES */
    @media (max-width: 768px) {
      .projects-showcase-section {
        padding: 60px 0;
        min-height: auto;
      }

      .cinematic-title-container {
        margin-bottom: 40px;
      }

      .title-background-text {
        font-size: clamp(6rem, 15vw, 12rem);
      }

      /* Mobile Navigation - Bottom Positioned */
      .projects-navigation {
        position: relative;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 30px;
        gap: 40px;
        pointer-events: auto;
      }

      .nav-arrow {
        position: relative;
        top: auto;
        left: auto;
        right: auto;
        transform: none;
        padding: 12px 20px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        font-size: 12px;
        width: auto;
        height: auto;
        pointer-events: auto;
        z-index: 100;
        backdrop-filter: blur(10px);
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .prev-arrow {
        left: auto;
      }

      .next-arrow {
        right: auto;
      }

      .nav-arrow span {
        display: inline;
        color: white;
        font-weight: 500;
      }

      .nav-arrow svg {
        width: 16px;
        height: 16px;
        color: white;
        opacity: 0.8;
        transition: opacity 0.3s ease;
      }

      .nav-arrow:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.4);
      }

      .nav-arrow:hover svg {
        opacity: 1;
      }

      .project-counter {
        position: relative;
        top: auto;
        left: auto;
        transform: none;
        font-size: 0.9rem;
        gap: 8px;
        order: 0;
      }

      .divider-line {
        width: 20px;
        height: 1px;
      }

      .divider-dot {
        width: 4px;
        height: 4px;
      }

      /* Mobile Project Display - Stack Vertically */
      .project-display {
        grid-template-columns: 1fr;
        gap: 40px;
        padding: 40px 30px;
        margin: 0 20px;
        border-radius: 20px;
        min-height: auto;
      }

      .project-visual {
        height: 350px;
        order: 2;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
      }

      .placeholder-text {
        font-size: 1.2rem;
        letter-spacing: 2px;
      }

      .project-details {
        gap: 15px;
        order: 1;
      }

      .project-header {
        gap: 12px;
        flex-wrap: wrap;
      }

      .project-number {
        font-size: 1rem;
      }

      .project-category {
        font-size: 10px;
        padding: 6px 12px;
      }

      .project-title {
        font-size: clamp(1.5rem, 6vw, 2rem);
        line-height: 1.2;
      }

      .project-description {
        font-size: 14px;
        line-height: 1.5;
      }

      .tech-tag {
        font-size: 10px;
        padding: 8px 12px;
      }

      .view-project-btn {
        padding: 12px 24px;
        font-size: 12px;
        gap: 8px;
        width: 100%;
        justify-content: center;
      }

      .view-project-btn svg {
        width: 16px;
        height: 16px;
      }
    }

    /* Swipe instruction for mobile */
    .swipe-instruction {
      display: none;
      position: absolute;
      top: -40px;
      left: 50%;
      transform: translateX(-50%);
      color: rgba(255, 255, 255, 0.6);
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      font-weight: 300;
      letter-spacing: 1px;
      animation: fadeInOut 4s ease-in-out infinite;
      pointer-events: none;
      z-index: 10;
    }

    .swipe-instruction::before {
      content: "‚Üê ";
      opacity: 0.8;
    }

    .swipe-instruction::after {
      content: " ‚Üí";
      opacity: 0.8;
    }

    @keyframes fadeInOut {
      0%, 100% { opacity: 0; }
      30%, 70% { opacity: 1; }
    }

    @media (max-width: 768px) {
      .swipe-instruction {
        display: block;
        position: relative;
        top: 0;
        left: 0;
        transform: none;
        text-align: center;
        margin-bottom: 30px;
        font-size: 12px;
        opacity: 0.7;
      }
    }

    /* FOOTER ESSENTIAL STYLES */

    /* Pre-Footer CTA Section */
    .pre-footer-cta {
      background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
      padding: 100px 0;
      border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .pre-footer-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 60px;
    }

    .pre-footer-content {
      display: grid;
      grid-template-columns: 1.5fr 1fr;
      gap: 80px;
      align-items: center;
    }

    .cta-main {
      text-align: left;
    }

    .cta-title {
      font-family: 'Space Grotesk', sans-serif;
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      font-weight: 700;
      color: #000000;
      line-height: 1.1;
      margin: 0 0 24px 0;
      letter-spacing: -0.02em;
    }

    .cta-description {
      font-family: 'Inter', sans-serif;
      font-size: 18px;
      line-height: 1.6;
      color: #666666;
      margin: 0 0 40px 0;
      max-width: 500px;
    }

    .cta-action {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }

    .cta-primary-btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 16px 32px;
      background: #000000;
      color: white;
      text-decoration: none;
      border-radius: 50px;
      font-family: 'Inter', sans-serif;
      font-size: 16px;
      font-weight: 600;
      transition: all 0.3s ease;
      border: 2px solid #000000;
    }

    .cta-primary-btn:hover {
      background: transparent;
      color: #000000;
      transform: translateY(-2px);
    }

    .cta-secondary-btn {
      display: inline-flex;
      align-items: center;
      padding: 16px 32px;
      background: transparent;
      color: #000000;
      text-decoration: none;
      border-radius: 50px;
      border: 2px solid rgba(0, 0, 0, 0.2);
      font-family: 'Inter', sans-serif;
      font-size: 16px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .cta-secondary-btn:hover {
      border-color: #000000;
      background: #000000;
      color: white;
      transform: translateY(-2px);
    }

    .cta-stats {
      display: grid;
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .stat-item {
      text-align: center;
      padding: 30px 20px;
      background: white;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      border: 1px solid rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .stat-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 40px rgba(0, 0, 0, 0.12);
    }

    .stat-number {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 2.5rem;
      font-weight: 700;
      color: #000000;
      line-height: 1;
      margin-bottom: 8px;
      display: block;
    }

    .stat-label {
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      color: #666666;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    /* Footer Styles */
    .concepts-footer {
      background: #000000;
      color: white;
      padding: 80px 0 40px 0;
      margin-top: 0;
    }

    .footer-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 60px;
    }

    .footer-content {
      display: grid;
      grid-template-columns: 1fr 2fr;
      gap: 80px;
      margin-bottom: 60px;
    }

    .footer-brand {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .footer-logo {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 2.5rem;
      font-weight: 700;
      color: white;
      margin: 0;
      letter-spacing: -0.02em;
    }

    .footer-tagline {
      font-family: 'Inter', sans-serif;
      font-size: 16px;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.7);
      margin: 0 0 30px 0;
      max-width: 300px;
    }

    .footer-cta {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .footer-cta-text {
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      color: rgba(255, 255, 255, 0.8);
      margin: 0;
      font-weight: 500;
    }

    .footer-cta-btn {
      display: inline-flex;
      align-items: center;
      padding: 12px 24px;
      background: white;
      color: #000000;
      text-decoration: none;
      border-radius: 25px;
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      font-weight: 600;
      transition: all 0.3s ease;
      width: fit-content;
      border: 2px solid white;
    }

    .footer-cta-btn:hover {
